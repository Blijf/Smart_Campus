<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryText"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<TextView-->
            <!--android:id="@+id/tvTexto"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="@color/colorTransparentWhite"-->
            <!--android:layout_margin="15dp"-->
            <!--android:text="Resultado "-->
            <!--android:gravity="center"/>-->
        <!--__________________________________________________________________________-->
        <!--MAPA-->
        <!--__________________________________________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:orientation="vertical">


            <com.esri.arcgisruntime.mapping.view.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.esri.arcgisruntime.mapping.view.MapView>
        </LinearLayout>
        <!--__________________________________________________________________________-->
        <!--BUSCADOR-->
        <!--__________________________________________________________________________-->
        <LinearLayout
            android:id="@+id/lySearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorTransparentWhite"
            android:padding="10dp"
            android:weightSum="100">


            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:paddingLeft="20dp"
                android:ems="10"
                android:hint="Â¿Que quieres buscar?"
                android:inputType="textPersonName"
                android:text="" />

            <Button
                android:id="@+id/btSearch"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_weight="20"
                android:background="@android:drawable/ic_menu_search" />

        </LinearLayout>
        <!--__________________________________________________________________________-->
        <!--LISTA DE BOTONES, UTILS-->
        <!--__________________________________________________________________________-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="65dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tgBuildings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/buildings_off"
                android:checked="false" />
            <ToggleButton
                android:id="@+id/tgFloors"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:checked="true"
                android:background="@drawable/floors_on" />

            <Button
                android:id="@+id/btRute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:drawable/ic_menu_myplaces" />
            <Button
                android:id="@+id/btDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:drawable/ic_menu_delete" />
            <Button
                android:id="@+id/btUbication"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:drawable/ic_menu_mylocation" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutFloors"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tgFloor6"
                style="@style/FloorButton"
                android:textOn="6"
                android:textOff="6"
                android:text="6"
                />
            <ToggleButton
                android:id="@+id/tgFloor5"
                style="@style/FloorButton"
                android:textOn="5"
                android:textOff="5"
                android:text="5"
                />
            <ToggleButton
                android:id="@+id/tgFloor4"
                style="@style/FloorButton"
                android:textOn="4"
                android:textOff="4"
                android:text="4"
                />
            <ToggleButton
                android:id="@+id/tgFloor3"
                style="@style/FloorButton"
                android:textOn="3"
                android:textOff="3"
                android:text="3"
                />
            <ToggleButton
                android:id="@+id/tgFloor2"
                style="@style/FloorButton"
                android:textOn="2"
                android:textOff="2"
                android:text="2"
                />
            <ToggleButton
                android:id="@+id/tgFloor1"
                style="@style/FloorButton"
                android:textOn="1"
                android:textOff="1"
                android:text="1"
                />
            <ToggleButton
                android:id="@+id/tgFloor0"
                style="@style/FloorButton"
                android:textOn="0"
                android:textOff="0"
                android:text="0"
                android:checked="true"
                />
            <ToggleButton
                android:id="@+id/tgFloorS"
                style="@style/FloorButton"
                android:textOn="S"
                android:textOff="S"
                android:text="S"
                />
        </LinearLayout>


    </FrameLayout>



</LinearLayout>